<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@android:color/background_light"
    tools:context=".FilterActivity" >

    <TextView
        android:id="@+id/tvImageSize"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/tvColorFilter"
        android:layout_alignParentTop="true"
        android:text="@string/ImageSize"
        android:gravity="center_vertical"
        android:textSize="17sp" />

    <Spinner
        android:id="@+id/spImageSize"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:spinnerMode="dropdown"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvColorFilter"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/tvImageType"
        android:layout_below="@+id/spImageSize"
        android:text="@string/ColorFilter"
        android:gravity="center_vertical"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tvSiteFilter"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvImageType"
        android:text="@string/SiteFilter"
        android:gravity="center_vertical"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tvImageType"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/spColorFilter"
        android:text="@string/ImageType"
        android:gravity="center_vertical"
        android:textSize="17sp" />

    <Spinner
        android:id="@+id/spColorFilter"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/spImageSize"
        android:spinnerMode="dropdown"
        android:textSize="12sp" />

    <Spinner
        android:id="@+id/spImageType"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tvImageType"
        android:spinnerMode="dropdown"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/etSiteFilter"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/spImageType"
        android:ems="10"
        android:hint="photobucket.com"
        android:textSize="13sp"
        android:textStyle="italic" >

        <requestFocus />
    </EditText>

</RelativeLayout>